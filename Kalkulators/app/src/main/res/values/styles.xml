<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blueColor</item>
        <item name="colorAccent">@color/blueColor</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">"sans-serif-light"</item>


        <item name="colorButtonNormal">@color/blueColor</item>
    </style>

    <style name="displayStyle">
        <item name="android:background">@color/greyBackground</item>
        <item name="android:textSize">@dimen/displayTextSize</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="textViewStyle">
        <item name="android:background">@color/whiteColor</item>
        <item name="android:textSize">@dimen/displayTextSize</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>



</resources>
